<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/match_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Match Type"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/hori_divier"
            android:clickable="true"
            />

        <View
            android:id="@+id/hori_divier"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/match_title"
            app:layout_constraintBottom_toBottomOf="@id/match_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/black" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/match_title"
            android:background="@color/black" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_listing"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/item_team"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:nestedScrollingEnabled="true"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>